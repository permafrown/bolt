<% include ../partials/head %>

    <h1 style="text-align: center;">Edit <%= campground.name %></h1>
    <div class="row">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" style="width: 30vw; margin: 0 auto;">
            <div class="form-group">
                <input type="text" class="form-control" id="inputCampName" aria-describedby="campNameHelp" name="campground[name]" value="<%= campground.name %>">
                <small id="campNameHelp" class="form-text text-muted">Please provide the name of the new campground</small>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="inputCampCost" aria-describedby="campCostHelp" name="campground[cost]" value="<%= campground.cost %>" min="0.01" step="0.01">
                <small id="campCostHelp" class="form-text text-muted">Please provide the price per night of the new campground</small>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="inputCampImgURL" aria-describedby="campImgURLHelp" name="campground[imageURL]" value="<%= campground.image %>">
                <small id="campImgURLHelp" class="form-text text-muted">Please provide an image link for the new campground</small>
            </div>
            <div class="form-group">
                <input type="textarea" class="form-control" id="inputCampDesc" aria-describedby="campDescHelp" name="campground[desc]" value="<%= campground.desc %>">
                <small id="campDescHelp" class="form-text text-muted">Please provide a description for the new campground</small>
            </div>
            <div class="btn-group">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-secondary" role="button" aria-disabled="true" href="/campgrounds">Back</a>
            </div>
        </form>
        
    </div>

<% include ../partials/foot %>